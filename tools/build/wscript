"""
This is a waf (http://code.google.com/p/waf/) build
script.  It currently doesn't use much of waf's capabilities.
Right now it is just used as a configuration scanner.
"""
import os

srcdir = os.getcwd()
blddir = srcdir + "/build"

print "srcdir=" , srcdir
print "blddir=", blddir

def set_options(opt):
    pass

from Configure import conf

def configure(conf):
        print "CHECKING FOR A WORKING C COMPILER"
	conf.check_tool('gcc')
        print "\nCHECKING FOR A WORKING C++ COMPILER"
	conf.check_tool('g++')
        ret = conf.find_program('inkscape')
        print "ret=", ret
        ret = conf.find_header('gsl/gsl_version.h',"",['/usr/local/include','/usr/include'])
        print "ret=", ret

        ret= conf.check_library2("fltk", 0, "FLTK")
        print "ret=", ret
        print conf.env["LIB_FLTK"]

def shutdown():
    pass
