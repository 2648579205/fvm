	Build=1

# needed for gmsh and lammps
fftw:
	Build=1

# needed for MPM
netcdf:
	env=F90=gfortran
	env=CC=gcc
	Build=True

# Needed for MPM scripts
netCDF4:
	Build=True

# Needed for FVM
parmetis:
	modules=openmpi-gcc
	Build=True
